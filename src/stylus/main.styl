body, html {
    background: #1d2a30;
    color: grey;
    font-family: Helvetica, Arial, sans-serif;
    font-size: 1em;
    height: 100%;
    margin: 0;
    padding: 0;
    width: 100%;
}

details {
    border: 1px solid #233339;
    opacity: 0.4;
    padding: 0.5rem 0 0.5rem 1rem;

    a {
        color: #45626b;
        text-decoration: none;

        &:hover {
            color: #72a2ae;
        }

        &:visited span {
            color: #a6ae2c; font-style: italic;
        }
    }

    label {
        color: gray;
        display: inline-block;
        padding: 0.5rem 0;
    }

    summary {
        color: lightgray;
        font-size: 1em;

        &:focus {
            outline: none;
        }
    }

    &[open] {
        opacity: 1;
    }
}

.study {
    background: #0e171c;
    font-size: 0.9rem;
    padding: 0.5rem;
}

.level-0 {
    margin-bottom: 2rem;
    padding: 1rem;

    &>summary {
        color: white;
        font-size: 1.2rem;
        padding-bottom: 0.5rem;

        input, span {
            display: none;
        }
    }
}

.level-1 {
    font-size: 0.9rem;

    summary {
        label {
            input {
                display: inline-block;
            }
        }
    }
}

header {
    background: #45626b;
    color: #72a2ae;
    line-height: 2rem;
    margin: 0;
    padding: 0.5rem;

    h1 {
        font-size: 1.1rem;
        font-weight: 400;
        height: 2rem;
        line-height: 2rem;
    }

    strong {
        background: #1d2a30;
        border-radius: 50%;
        color: white;
        display: inline-block;
        font-weight: 100;
        height: 2rem;
        overflow: hidden;
        text-align: center;
        vertical-align: middle;
        width: 2rem;
    }
}

section {
    min-height: calc(100vh - 9rem);
}

footer {
    background: #0e171c;
    color: #1d2a30;
    font-size: 0.8rem;
    padding: 1rem;
    text-align: center;
}
